{{!-- // what the page will render --}}

<h1>Eat Da Burger</h1>

<h2>Burgers That are not devoured!</h2>

<ul>
{{!-- {{#each burgers}} --}}
    {{#each burgers}}
        {{#unless devoured}}
            <li id="burger-list">{{this.burger_name}}
                <button id="eat-burger" class="eat-burger">Eat Da Burger</button>
            </li>
    {{!-- {{> cats/cat-block sleep=true}} --}}
        {{/unless}}
    {{/each}}
</ul>

<h2 >Burgers that are devoured</h2>

 <ul>
    {{#each burgers}}
        {{#if devoured}}
        <li>{{this.burger_name}}</li>
            {{!-- {{> cats/cat-block sleep=true}}  --}}
        {{/if}}
    {{/each}}
</ul> 

<form class="create-form" method="POST">
	<div>
        <label for="burger">Burger Name:</label>
        <input type="text" id="add-burger" name="name">
    </div>
    <input type="submit" value="newburger">
	<button id="burger-to-be-devoured" type="submit" >Submit</button>
</form>
